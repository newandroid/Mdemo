<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.SeekBarActivity">
    <!--<com.warkiz.widget.IndicatorStayLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seekBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_indicator_color="@android:color/transparent"
            app:isb_indicator_text_color="#28292a"
            app:isb_indicator_text_size="11sp"
            app:isb_max="255"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="circular_bubble"
            app:isb_thumb_color="#28292a"
            app:isb_thumb_size="20dp"
            app:isb_track_background_color="#28292a"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="#28292a"
            app:isb_track_progress_size="2dp" />
    <!--</com.warkiz.widget.IndicatorStayLayout>-->


    <com.warkiz.widget.IndicatorSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:isb_indicator_color="@android:color/darker_gray"
        app:isb_indicator_text_color="@color/colorAccent"
        app:isb_indicator_text_size="18sp"
        app:isb_max="100"
        app:isb_min="-1.0"
        app:isb_only_thumb_draggable="false"
        app:isb_progress="25"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@android:color/holo_green_dark"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_drawable="@mipmap/ic_launcher"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_color="@android:color/holo_blue_dark"
        app:isb_tick_texts_size="15sp"
        app:isb_ticks_count="5"
        app:isb_track_background_color="@android:color/darker_gray"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@android:color/holo_blue_dark"
        app:isb_track_progress_size="4dp" />

</RelativeLayout>