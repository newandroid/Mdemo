<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.SeekBarActivity">

    <com.warkiz.tickseekbar.TickSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tsb_max="255"
        app:tsb_min="0"
        app:tsb_show_thumb_text="above"
        app:tsb_thumb_color="#28292a"
        app:tsb_thumb_size="16dp"
        app:tsb_thumb_text_color="#28292a"
        app:tsb_track_background_color="#28292a"
        app:tsb_track_background_size="2dp"
        app:tsb_track_progress_color="#28292a"
        app:tsb_track_progress_size="2dp" />

    <com.warkiz.tickseekbar.TickSeekBar
        android:id="@+id/listener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:tsb_show_tick_marks_type="oval"
        app:tsb_show_tick_texts="above"
        app:tsb_thumb_color="@color/colorAccent"
        app:tsb_thumb_size="16dp"
        app:tsb_tick_marks_color="@color/colorAccent"
        app:tsb_tick_marks_size="8dp"
        app:tsb_tick_texts_color="@android:color/holo_red_dark"
        app:tsb_tick_texts_size="13sp"
        app:tsb_ticks_count="5"
        app:tsb_track_background_color="@android:color/darker_gray"
        app:tsb_track_background_size="2dp"
        app:tsb_track_progress_color="@android:color/holo_blue_dark"
        app:tsb_track_progress_size="3dp" />

    <Button
        android:id="@+id/sbBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/speedSb" />

    <com.warkiz.tickseekbar.TickSeekBar
        android:id="@+id/speedSb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:tsb_max="2"
        app:tsb_min="0"
        app:tsb_show_tick_marks_type="oval"
        app:tsb_show_tick_texts="above"
        app:tsb_thumb_color="#28292a"
        app:tsb_thumb_size="16dp"
        app:tsb_tick_marks_color="#28292a"
        app:tsb_tick_marks_size="8dp"
        app:tsb_tick_texts_array="@array/flash_array"
        app:tsb_tick_texts_color="#28292a"
        app:tsb_tick_texts_size="13sp"
        app:tsb_ticks_count="3"
        app:tsb_track_background_color="#28292a"
        app:tsb_track_background_size="2dp"
        app:tsb_track_progress_color="#28292a"
        app:tsb_track_progress_size="3dp" />

</RelativeLayout>